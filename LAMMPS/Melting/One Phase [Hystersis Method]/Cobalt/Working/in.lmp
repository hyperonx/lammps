variable T equal 1900+${loopVar}*100
# variable T equal 1200
# velocity all create 1200 123123
reset_timestep 0
fix 1 all npt temp $T $T $(dt*100) iso 0 0 $(dt*1000)
print """
<--------------------------------------------------------------------->
<------------------ Equilibrating at temperature $T ----------------->
<--------------------------------------------------------------------->
"""
fix temp all print 1000 "$(step) $(temp) $(press) ${sys_press} $(vol) $(ke) $(pe) $(density)" file temp_hot.txt screen no title  "step temp press pressGiga vol ke pe density"
run 250000


# fix 132 all momentum 100 linear 1 1 1 angular
fix out_file_1 all print 1000 "$(step) $(temp) $(press) ${sys_press} $(vol) $(ke) $(pe) $(density)" file one_phase_heating_$T_.txt screen no title  "step temp press pressGiga vol ke pe density"

# dump 3 all custom 1000 traj_npt_new.lammpstrj id type x y z 
run 50000

unfix temp
unfix out_file_1
# unfix 1 
# # clear
write_data after_heating_$T.in
write_restart after_heating_$T.lmp 
next loopVar
# # # thermo_modify flush yes
jump in.lmp ensemble



