
units metal
boundary p p p
atom_style atomic


lattice bcc 2.887902 
read_data in.data 

replicate 6 6 12

# lattice bcc 2.887902
# region box block  3 0 3 0 8 units lattice
region left_hot block INF INF INF INF INF 3 units lattice
region right_hot block INF INF INF INF 9 INF units lattice
region middle_cold block INF INF INF INF 3 9 units lattice


#  2 6 units lattice
region hot union 2 left_hot right_hot
group hot_atoms region hot
group cold_atoms region middle_cold

variable dt equal 0.001


pair_style eam/alloy
pair_coeff * * Mishin-Ni-Al-2009.eam.alloy Ni Al

velocity all create 300 546445435 mom yes rot yes dist gaussian

neighbor 2 bin

neigh_modify every 10 check yes 

fix 1 hot_atoms npt temp 300 2300 $(dt*100) iso 0 0 $(dt*1000) drag 1.0

thermo 1000
thermo_style custom step temp vol press ke pe density

fix temp all print 100 "$(step) $(temp) $(press) $(vol) $(ke) $(pe) $(density)" file temp.txt screen no title  "step temp press vol ke pe density"
# run 250000
fix out_file_1 all print 1000 "$(step) $(temp) $(press) $(vol) $(ke) $(pe) $(density)" file output.txt screen no title  "step temp press vol ke pe density"

dump 3 all custom 1000 traj_npt_new.lammpstrj id type x y z 
# dump_modify 3 element Ni Al

run 500000

write_data after_two_phase_equil.in
write_restart after_two_phase_equil.lmp 

